<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MemberActivity"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="#FFFFFF">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/tvEmail"
                android:layout_marginLeft="5dp"
                android:textColor="#ef6c00" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etEmail"
                android:hint="이메일주소"
                style="@style/Theme.AppCompat.Light"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="5dp"
                android:textColor="#9e9e9e" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/emailCheck"
                android:id="@+id/tvEmailCheck"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:singleLine="false"
                android:textColor="#ef6c00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/tvPassword"
                android:layout_marginLeft="5dp"
                android:textColor="#ef6c00"
                android:layout_marginTop="5dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPassword"
                android:hint="비밀번호"
                style="@style/Theme.AppCompat.Light"
                android:inputType="textPassword"
                android:textColor="#9e9e9e" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPasswordConfirm"
                android:hint="비밀번호확인"
                style="@style/Theme.AppCompat.Light"
                android:inputType="textPassword"
                android:layout_marginBottom="10dp"
                android:textColor="#9e9e9e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:id="@+id/tvCellPhone"
                android:layout_marginLeft="5dp"
                android:textColor="#ef6c00" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etCellNum"
                android:hint="전화번호 &apos;-&apos; 없이"
                style="@style/Theme.AppCompat.Light"
                android:inputType="phone"
                android:layout_marginBottom="10dp"
                android:textColor="#9e9e9e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:id="@+id/tvBirth"
                android:layout_marginLeft="5dp"
                android:textColor="#ef6c00" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etBirth"
                android:hint="생년월일"
                style="@style/Theme.AppCompat.Light"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                android:textColor="#9e9e9e" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">


                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알람수신여부"
                    android:id="@+id/swAlarm"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textColor="#ef6c00" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자동추천여부"
                    android:id="@+id/swAuto"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ef6c00" />
            </LinearLayout>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spNavigation"
                style="@style/Theme.AppCompat.Light"
                android:spinnerMode="dropdown"
                android:prompt="@string/prompt"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:id="@+id/btnJoin"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="취소하기"
                android:id="@+id/btnJoinCancle"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>