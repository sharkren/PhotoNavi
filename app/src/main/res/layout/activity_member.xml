<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#CDDC39"
    tools:context="com.example.thomas.photonavi.MemberActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:id="@+id/tvEmail"
            android:layout_marginRight="70dp"
            android:textSize="15dp"
            android:textColor="#080808" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:hint="이메일주소" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/emailCheck"
            android:id="@+id/tvEmailCheck"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:singleLine="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:id="@+id/tvPassword"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#080808" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:hint="비밀번호"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호확인"
            android:id="@+id/tvPasswordConfirm"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#080808" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPasswordConfirm"
            android:hint="비밀번호확인"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:id="@+id/tvCellPhone"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#080808" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etCellNum"
            android:hint="전화번호"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText6"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:id="@+id/tvBirth"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#080808" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etBirth"
            android:hint="생년월일"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용네비게이션"
            android:id="@+id/tvNavigation"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#080808" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNavi"
            android:hint="자주쓰는네이게이션"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람수신여부"
            android:id="@+id/tvAlarmYn"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#080808" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예"
            android:id="@+id/rbAlarm"
            android:checked="true"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아니요"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동추천여부"
            android:id="@+id/tvAutoFind"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#080808" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아니요"
            android:id="@+id/radioButton4"
            android:checked="false"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호"
            android:id="@+id/tvAuthNum"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:textSize="15dp"
            android:textColor="#080808" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAuthNum"
            android:layout_marginTop="10dp"
            android:hint="인증번호6자리" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:id="@+id/btnAuthNum"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>