<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thomas.photonavi.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 위치정보로 네비게이션 연동하기"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/imgPhoto"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진불러오기"
        android:id="@+id/btnLoadPhoto"
        android:layout_below="@+id/imgPhoto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tmap 연동하기"
        android:id="@+id/btnNavi"
        android:layout_alignTop="@+id/btnLoadPhoto"
        android:layout_toEndOf="@+id/btnGps" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내위치"
        android:id="@+id/btnGps"
        android:layout_alignTop="@+id/btnLoadPhoto"
        android:layout_toEndOf="@+id/btnLoadPhoto" />

</RelativeLayout>
